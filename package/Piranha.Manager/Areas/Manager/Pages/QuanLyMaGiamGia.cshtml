@page "/quan-ly-ma-giam-gia/"
@model Piranha.Manager.Areas.Manager.Pages.QuanLyMaGiamGiaModel
@{
}
<div id="formview">
    <div class="card m-3">
        <h4>Quản lý mã giảm giá</h4>
        <div class="row">
            <div class="form-group col-3">
                @Html.Label("Tên mã giảm giá")
                @Html.TextBox("MaGiamGia", null, new { @class = "form-control" })
            </div>
               <div class="form-group col-3">
                    @Html.Label("Trạng thái")
                    <select class="form-control" id="TrangThai" name="TrangThai">
                        <option value="">
                            Chọn trạng thái
                        </option>
                        <option value="0">
                            0. Chưa áp dụng
                        </option>
                        <option value="1">
                            1. Đã áp dụng
                        </option>
                    </select>
                </div>
            <div class="form-group col-3" style="margin-top: 29px">
                <span style="cursor:pointer;float:left" onclick="TimKiem()" class="btn btn-primary ml-2">Tìm kiếm</span>
            </div>
        </div>
        <div class="card-body">
            <table id="tbl" width="100%" class="table table-bordered display">
                <thead>
                    <tr>
                        <th class="bg-info">STT</th>
                        <th class="bg-info">Mã giảm giá</th>
                        <th class="bg-info">Thời gian bắt đầu</th>
                        <th class="bg-info">Thời gian kết thúc</th>
                        <th class="bg-info">Tỷ lệ giảm</th>
                        <th class="bg-info">Số tiền giảm</th>
                        <th class="bg-info">Trạng thái</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
<script>
     $("#TrangThai").select2();
</script>